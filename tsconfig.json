// tsconfig.json is for editor/eslint support, including every ts/tsx files
// tsconfig.build.json is for building, including only files needed for the final product
{
  "extends": "./tsconfig.build.json",
  "include": ["**/*"],
  "exclude": ["packages/**/*", "gems/**/*", "dist/**/*", "cypress/**/*"],
  "references": [
    {
      "path": "packages/brickdoc-test-helper"
    },
    {
      "path": "packages/brickdoc-uploader"
    },
    {
      "path": "packages/brickdoc-design-system"
    },
    {
      "path": "packages/brickdoc-editor"
    },
    {
      "path": "packages/brickdoc-formula"
    },
    {
      "path": "packages/brickdoc-schema"
    }
  ]
}
