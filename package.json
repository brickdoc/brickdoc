{
  "name": "@brickdoc/monorepo",
  "version": "0.0.0",
  "author": "Brickdoc LTD",
  "description": "Brickdoc Monorepo Root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "bin/webpack-dev-server",
    "lint": "eslint --cache ./  --ext .ts,.tsx --ignore-pattern 'vendor/*' && bundle exec rubocop --parallel --config .rubocop.yml && bundle exec brakeman --summary --no-pager --exit-on-warn",
    "lint:fix": "eslint --cache ./ --fix --ext .ts,.tsx --ignore-pattern 'vendor/*' && bundle exec rubocop --config .rubocop.yml -a && bundle exec brakeman  --faster --summary --no-pager --exit-on-warn",
    "test": "yarn lint && bundle exec rspec",
    "commit": "git add . && cz",
    "graphql": "rake graphql:schema:dump && graphql-codegen --config codegen.yml",
    "less-vars-loader": "yarn workspace @brickdoc/less-vars-loader",
    "design-system": "yarn workspace @brickdoc/design-system",
    "postinstall": "husky install"
  },
  "browserslist": [
    "chrome >= 74",
    "ios >= 13",
    "firefox esr",
    "last 3 edge version",
    "last 2 safari version",
    "not dead"
  ],
  "dependencies": {
    "@apollo/client": "^3.3.20",
    "@brickdoc/design-system": "workspace:packages/brickdoc-design-system",
    "@brickdoc/editor": "workspace:packages/brickdoc-editor",
    "@rails/actioncable": "^6.1.4",
    "ahooks": "^2.10.6",
    "date-fns": "^2.22.1",
    "graphql": "^15.5.1",
    "graphql-ruby-client": "^1.9.4",
    "i18next": "^20.3.2",
    "i18next-http-backend": "^1.2.6",
    "i18next-multiload-backend-adapter": "^1.0.0",
    "lodash": "^4.17.21",
    "performant-array-to-tree": "^1.9.1",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.0.9",
    "react-i18next": "^11.11.0",
    "react-router": "^5.2.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@brickdoc/eslint-plugin": "workspace:packages/eslint-plugin-brickdoc",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@graphql-codegen/cli": "^1.21.6",
    "@graphql-codegen/typescript": "^1.22.4",
    "@graphql-codegen/typescript-operations": "^1.18.3",
    "@graphql-codegen/typescript-react-apollo": "^2.2.8",
    "@rails/webpacker": "6.0.0-beta.7",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@types/qs": "^6.9.6",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-router-config": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "@webpack-cli/serve": "^1.5.1",
    "autoprefixer": "^10.2.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "commitizen": "^4.2.4",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "cssnano": "^5.0.6",
    "cypress": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.29.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsdoc": "^35.4.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-security-node": "^1.0.14",
    "fork-ts-checker-webpack-plugin": "^6.2.12",
    "graphql-tag": "^2.12.5",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "less": "^4.1.1",
    "less-loader": "^10.0.0",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^2.0.0",
    "patch-package": "^6.4.7",
