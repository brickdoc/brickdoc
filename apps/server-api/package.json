{
  "name": "@brickdoc/server-api",
  "private": true,
  "schematics": "./src/cli/schematics/collection.json",
  "volta": {
    "extends": "../../package.json"
  },
  "scripts": {
    "prepare:rust-deps": "run -T build:rust",
    "prepare:client-web": "run -T build-support build:client-web",
    "dev": "yarn prepare:rust-deps && node-dev --enable-source-maps --inspect --notify=false src/main.ts server",
    "start": "run -T ts-node src/main.ts server",
    "console": "yarn prepare:rust-deps && run -T ts-node src/main.ts console",
    "cli": "run -T ts-node src/main.ts",
    "g": "run -T ts-node src/cli/schematics/main.ts",
    "lint": "yarn lint:eslint && yarn lint:type",
    "lint:eslint": "TIMING=1 run -T eslint --cache --ext ts,tsx src",
    "lint:fix": "TIMING=1 run -T eslint --cache --ext ts,tsx src --fix",
    "lint:type": "run -T tsc",
    "test:jest": "NODE_ENV=test run -T jest",
    "tsdoc": "run -T typedoc --excludeExternals --options ../../tools/typedoc/config.json --out ./docs/api ./src/**/index.ts"
  },
  "devDependencies": {
    "@brickdoc/schematics": "workspace:^",
    "@faker-js/faker": "^6.3.1",
    "@nestjs/testing": "^8.4.4",
    "@types/graphql-type-json": "^0.3.2",
    "@types/lru-cache": "^7.6.1",
    "leaked-handles": "^5.2.0",
    "node-dev": "^7.4.3",
    "selfsigned": "^2.0.1",
    "slonik-sql-tag-raw": "^1.1.4"
  },
  "dependencies": {
    "@brickdoc/active-support": "workspace:^",
    "@brickdoc/build-support": "workspace:^",
    "@brickdoc/dotenv": "workspace:^",
    "@brickdoc/nestjs-redis": "workspace:^",
    "@brickdoc/nestjs-slonik": "workspace:^",
    "@brickdoc/server-api-crate": "workspace:^",
    "@fastify/cookie": "^6.0.0",
    "@fastify/helmet": "^8.0.0",
    "@nestjs/apollo": "^10.0.11",
    "@nestjs/common": "^8.4.4",
    "@nestjs/core": "^8.4.4",
    "@nestjs/graphql": "^10.0.11",
    "@nestjs/platform-fastify": "^8.4.4",
    "@nestjs/terminus": "^8.0.6",
    "@slonik/migrator": "^0.11.2",
    "apollo-server-fastify": "^3.7.0",
    "cross-spawn": "^7.0.3",
    "date-fns": "^2.28.0",
    "enquirer": "^2.3.6",
    "fastify-plugin": "^3.0.1",
    "fastify-static": "^4.7.0",
    "globby": "^11.1.0",
    "graphql": "^16.5.0",
    "graphql-type-json": "^0.3.2",
    "handlebars": "^4.7.7",
    "lru-cache": "^7.10.1",
    "nest-winston": "^1.6.2",
    "point-of-view": "^5.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "tzdata": "^1.0.30",
    "winston": "^3.7.2",
    "yargs": "^17.5.0",
    "yargs-parser": "^21.0.1",
    "yup": "^0.32.11"
  }
}
