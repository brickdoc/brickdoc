{
  "name": "@brickdoc/cypherpunk",
  "version": "0.1.0",
  "description": "An omakase-style high-level wrapper for modern crypto libraries for NodeJS.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brickdoc/brickdoc-ce.git"
  },
  "bugs": {
    "url": "https://github.com/brickdoc/brickdoc-ce/labels/cypherpunk"
  },
  "license": "Apache-2.0",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "dependencies": {
    "blake3": "^2.1.7",
    "sodium-native": "^3.3.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "@types/sodium-native": "^2.3.5"
  },
  "scripts": {
    "lint": "yarn lint:eslint && yarn lint:type",
    "lint:eslint": "TIMING=1 run -T eslint --cache --ext ts,tsx src",
    "lint:fix": "TIMING=1 run -T eslint --cache --ext ts,tsx src --fix",
    "lint:type": "run -T tsc",
    "test:jest": "run -T jest",
    "tsdoc": "run -T typedoc --options ../../tools/typedoc/config.json --out ./docs/api ./src/index.ts"
  }
}
