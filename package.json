{
  "name": "@brickdoc/monorepo",
  "version": "0.0.0",
  "author": "Brickdoc LTD",
  "description": "Brickdoc Monorepo Root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "start": "./bin/webpack-dev-server",
    "dist": "./bin/webpack",
    "dist:prod": "RAILS_ENV=production yarn dist",
    "dist:test": "RAILS_ENV=test yarn dist",
    "analyze": "BUNDLE_ANALYZER=1 yarn dist",
    "lint": "yarn lint:eslint && yarn lint:rubocop && yarn lint:brakeman",
    "lint:fix": "yarn lint:eslint:fix && yarn lint:rubocop:fix",
    "lint:eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./",
    "lint:eslint:fix": "eslint --cache --fix --ext .js,.jsx,.ts,.tsx ./",
    "lint:rubocop": "bundle exec rubocop --parallel --config .rubocop.yml",
    "lint:rubocop:fix": "bundle exec rubocop --config .rubocop.yml -a",
    "lint:brakeman": "bundle exec brakeman --no-pager --exit-on-warn",
    "tsc:check": "tsc --build",
    "tsc:build": "tsc --build tsconfig.build.json",
    "test": "yarn tsc:check && yarn lint && yarn test:jest && yarn test:rspec",
    "test:jest": "yarn tsc:build && jest",
    "test:cypress": "cypress open",
    "test:rspec": "bundle exec rspec",
    "commit": "git add . && cz",
    "graphql": "bundle exec rails graphql:schema:dump && graphql-codegen --config codegen.yml",
    "cleanup": "rm -rf node_modules/.cache && rm -rf dist && rm -rf public/esm-bundle && rm -rf public/packs-test && rm -rf junit-reports && rm -rf coverage && yarn less-vars-loader cleanup && yarn design-system cleanup && yarn editor cleanup",
    "less-vars-loader": "yarn workspace @brickdoc/less-vars-loader",
    "design-system": "yarn workspace @brickdoc/design-system",
    "editor": "yarn workspace @brickdoc/editor"
  },
  "browserslist": [
    "chrome >= 74",
    "ios >= 13",
    "firefox esr",
    "last 3 edge version",
    "last 2 safari version",
    "not dead"
  ],
  "dependencies": {
    "@apollo/client": "^3.4.5",
    "@brickdoc/design-system": "workspace:packages/brickdoc-design-system",
    "@brickdoc/editor": "workspace:packages/brickdoc-editor",
    "@rails/actioncable": "^6.1.4",
    "@rails/activestorage": "^6.1.4",
    "ahooks": "^2.10.9",
    "date-fns": "^2.23.0",
    "graphql": "^15.5.1",
    "graphql-ruby-client": "^1.9.4",
    "i18next": "^20.3.5",
    "i18next-http-backend": "^1.3.0",
    "i18next-multiload-backend-adapter": "^1.0.0",
    "lodash": "^4.17.21",
    "performant-array-to-tree": "^1.9.1",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.0.9",
    "react-i18next": "^11.11.4",
    "react-router": "^5.2.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@brickdoc/eslint-plugin": "workspace:packages/eslint-plugin-brickdoc",
    "@brickdoc/webpacker": "workspace:packages/webpacker",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@cypress/code-coverage": "^3.9.10",
    "@graphql-codegen/cli": "^2.0.1",
    "@graphql-codegen/typescript": "^2.0.0",
    "@graphql-codegen/typescript-operations": "^2.0.1",
    "@graphql-codegen/typescript-react-apollo": "^3.0.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.0-rc.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.13",
    "@types/qs": "^6.9.7",
    "@types/rails__actioncable": "^6.1.5",
    "@types/rails__activestorage": "^6.0.1",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-config": "^5.0.3",
    "@types/react-router-dom": "^5.1.8",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "@webpack-cli/serve": "^1.5.1",
    "autoprefixer": "^10.3.1",
    "babel-jest": "^27.0.6",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "commitizen": "^4.2.4",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "cssnano": "^5.0.7",
    "cypress": "^8.2.0",
    "cypress-multi-reporters": "^1.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-security-node": "^1.0.14",
    "graphql-tag": "^2.12.5",
    "husky": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "is-ci": "^3.0.0",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "less": "^4.1.1",
    "less-loader": "^10.0.1",
    "lint-staged": "^11.1.1",
    "mini-css-extract-plugin": "^2.2.0",
    "mocha": "^9.0.3",
    "mocha-junit-reporter": "^2.0.0",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.2",
    "react-refresh": "^0.10.0",
    "source-map-loader": "^3.0.0",
    "ts-loader": "^9.2.5",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.5",
    "webpack": "^5.48.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "packageManager": "yarn@3.0.0",
  "resolutions": {
    "prosemirror-model": "patch:prosemirror-model@npm:1.14.3#.yarn/patches/prosemirror-model-npm-1.14.3-b5be51ca4b",
    "@rails/actioncable": "patch:@rails/actioncable@npm:6.1.4#.yarn/patches/@rails-actioncable-npm-6.1.4-0b7207789c"
  }
}
