{
  "name": "@brickdoc/monorepo",
  "version": "0.0.0",
  "author": "Brickdoc LTD",
  "description": "Brickdoc Monorepo Root",
  "private": true,
  "workspaces": [
    "gems/*",
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "postinstall": "husky install && ./bin/pdftron static",
    "start": "./bin/vite dev",
    "dist": "./bin/vite build",
    "dist:prod": "RAILS_ENV=production yarn dist",
    "dist:test": "RAILS_ENV=test yarn dist",
    "analyze": "BUNDLE_ANALYZER=1 yarn dist:prod",
    "lint": "yarn lint:eslint && yarn lint:rubocop && yarn lint:brakeman",
    "lint:fix": "yarn lint:eslint:fix && yarn lint:rubocop:fix",
    "lint:eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./",
    "lint:eslint:fix": "eslint --cache --fix --ext .js,.jsx,.ts,.tsx ./",
    "lint:rubocop": "bundle exec rubocop --parallel --config .rubocop.yml",
    "lint:rubocop:fix": "bundle exec rubocop --config .rubocop.yml -a",
    "lint:brakeman": "bundle exec brakeman --no-pager --exit-on-warn",
    "tsc:check": "tsc --build",
    "test": "yarn tsc:check && yarn lint && yarn test:jest && yarn test:rspec",
    "test:jest": "jest --runInBand",
    "test:cypress": "cypress open",
    "test:rspec": "bundle exec rspec",
    "commit": "git add . && cz",
    "graphql": "bundle exec rails graphql:schema:dump && graphql-codegen --config codegen.yml",
    "cleanup": "rm -rf dist packages/*/dist public/esm-bundle junit-reports node_modules/.cache coverage",
    "schema": "yarn workspace @brickdoc/schema",
    "design-system": "yarn workspace @brickdoc/design-system",
    "headless": "yarn workspace @brickdoc/brickdoc-headless-design-system",
    "design-icons": "yarn workspace @brickdoc/design-icons",
    "editor": "yarn workspace @brickdoc/editor",
    "formula": "yarn workspace @brickdoc/formula",
    "uploader": "yarn workspace @brickdoc/uploader"
  },
  "dependencies": {
    "@apollo/client": "^3.5.6",
    "@brickdoc/design-system": "workspace:packages/brickdoc-design-system",
    "@brickdoc/editor": "workspace:packages/brickdoc-editor",
    "@brickdoc/formula": "workspace:packages/brickdoc-formula",
    "@brickdoc/schema": "workspace:packages/brickdoc-schema",
    "@brickdoc/test-helper": "workspace:packages/brickdoc-test-helper",
    "@rails/actioncable": "^6.1.4",
    "@rails/activestorage": "^7.0.0",
    "@sentry/react": "^6.16.1",
    "@sentry/tracing": "^6.16.1",
    "ahooks": "^3.1.4",
    "dayjs": "^1.10.7",
    "graphql": "^16.2.0",
    "graphql-ruby-client": "^1.10.5",
    "i18next": "^21.6.5",
    "i18next-http-backend": "^1.3.1",
    "lodash-es": "^4.17.21",
    "performant-array-to-tree": "^1.9.1",
    "ramda": "^0.27.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.2.2",
    "react-i18next": "^11.15.3",
    "react-router-dom": "^6.2.1"
  },
  "devDependencies": {
    "@brickdoc/eslint-plugin": "workspace:packages/eslint-plugin-brickdoc",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@cypress/code-coverage": "^3.9.12",
    "@graphql-codegen/cli": "^2.3.1",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-operations": "^2.2.2",
    "@graphql-codegen/typescript-react-apollo": "^3.2.3",
    "@swc/core": "^1.2.127",
    "@swc/jest": "^0.2.15",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^27.4.0",
    "@types/jest-axe": "^3.5.3",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^17.0.8",
    "@types/rails__actioncable": "^6.1.6",
    "@types/rails__activestorage": "^7.0.0",
    "@types/ramda": "^0.27.62",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@vitejs/plugin-react": "^1.1.4",
    "autoprefixer": "^10.4.1",
    "babel-plugin-istanbul": "^6.1.1",
    "browserlist": "^1.0.1",
    "commitizen": "^4.2.4",
    "cypress": "^9.2.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-multi-reporters": "^1.5.0",
    "cypress-real-events": "^1.6.0",
    "cypress-wait-until": "^1.7.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.6.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-security-node": "^1.1.0",
    "fs-extra": "^10.0.0",
    "graphql-tag": "^2.12.6",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "is-ci": "^3.0.1",
    "jest": "^27.4.7",
    "jest-axe": "^5.0.1",
    "jest-junit": "^13.0.0",
    "less": "^4.1.2",
    "lint-staged": "^12.1.5",
    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "postcss": "^8.4.5",
    "postcss-less": "^5.0.0",
    "postcss-preset-env": "^7.2.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4",
    "vite": "^2.7.10",
    "vite-plugin-pwa": "^0.11.12",
    "vite-plugin-ruby": "^3.0.6"
  },
  "packageManager": "yarn@3.1.1",
  "resolutions": {
    "@rails/actioncable": "patch:@rails/actioncable@npm:6.1.4#.yarn/patches/@rails-actioncable-npm-6.1.4-0b7207789c",
    "preact": "10.6.4",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "vite-plugin-mdx": "patch:vite-plugin-mdx@npm:3.5.10#.yarn/patches/vite-plugin-mdx-npm-3.5.10-ae54c30668",
    "@apollo/client": "patch:@apollo/client@npm:3.5.6#.yarn/patches/@apollo-client-npm-3.5.6-8b8a361cd5",
    "esbuild": "^0.14.10"
  }
}
