{
  "name": "@brickdoc/monorepo",
  "version": "0.0.0",
  "author": "Brickdoc LTD",
  "description": "Brickdoc Monorepo Root",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*",
    "plugins/*"
  ],
  "scripts": {
    "postinstall": "husky install && ./tools/scripts/pdftron static ",
    "start": "./bin/vite dev",
    "dist": "./bin/vite build",
    "analyze": "BUNDLE_STATS=1 yarn dist && open ./tmp/esm-bundle-stats.html",
    "build:rust": "turbo run build:rust",
    "lint": "turbo run lint:eslint lint:type",
    "lint:eslint": "turbo run lint:eslint",
    "lint:fix": "turbo run lint:fix",
    "lint:type": "turbo run lint:type",
    "tsdoc": "turbo run tsdoc",
    "test": "turbo run lint lint:type test:jest",
    "test:update-snap": "NODE_ENV=test yarn workspaces foreach --since -p -j unlimited run test:jest -u",
    "test:jest": "NODE_ENV=test turbo run test:jest",
    "test:playwright": "yarn e2e-testing start",
    "commit": "git add . && cz",
    "graphql": "bundle exec rails graphql:schema:dump && yarn workspace @brickdoc/client-web graphql-codegen --config codegen.yml",
    "cleanup": "rimraf node_modules/.cache public/esm-bundle '{packages,tools,apps}/*/{dist,junit-reports,coverage,.turbo,.nyc_output,.eslintcache,.next}' 'tools/e2e-testing/{allure-report,allure-results,test-results,storageState-*.json}' 'packages/server-api-crate/{target,*.node}'",
    "schema": "yarn workspace @brickdoc/schema",
    "design-system": "yarn workspace @brickdoc/design-system",
    "design-icons": "yarn workspace @brickdoc/design-icons",
    "editor": "yarn workspace @brickdoc/editor",
    "formula": "yarn workspace @brickdoc/formula",
    "uploader": "yarn workspace @brickdoc/uploader",
    "web": "yarn workspace @brickdoc/client-web",
    "api": "yarn workspace @brickdoc/server-api",
    "e2e-testing": "yarn workspace @brickdoc/e2e-testing",
    "redis": "yarn workspace @brickdoc/nestjs-redis",
    "slonik": "yarn workspace @brickdoc/nestjs-slonik",
    "api-crate": "yarn workspace @brickdoc/server-api-crate",
    "build-support": "yarn workspace @brickdoc/build-support"
  },
  "devDependencies": {
    "@brickdoc/eslint-plugin": "workspace:^",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-operations": "^2.4.0",
    "@graphql-codegen/typescript-react-apollo": "^3.2.14",
    "@swc/cli": "^0.1.57",
    "@swc/jest": "^0.2.21",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.0",
    "@testing-library/user-event": "^14.1.1",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^27.5.1",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^17.0.32",
    "@types/rails__actioncable": "^6.1.6",
    "@types/rails__activestorage": "^7.0.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/uuid": "^8.3.4",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.15.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.1",
    "graphql-tag": "^2.12.6",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "is-ci": "^3.0.1",
    "jest": "^28.1.0",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-junit": "^13.2.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "turbo": "^1.2.9",
    "typedoc": "^0.22.15",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.6.4",
    "vite-plugin-ruby": "^3.0.10"
  },
  "packageManager": "yarn@3.2.0",
  "resolutions": {
    "preact": "10.6.6",
    "@types/react": "^17.0.44",
    "@types/react-dom": "^17.0.15",
    "@rails/actioncable": "patch:@rails/actioncable@npm:7.0.1#.yarn/patches/@rails-actioncable-npm-7.0.1-7dd9553527",
    "cached-path-relative": ">=1.1.0",
    "trim": ">= 1.0.1",
    "dayjs": ">=1.11.1",
    "cpy": "npm:@brickdoc/cpy@>=8.1.2-patch.1",
    "@jest/transform": "npm:@jest/transform@>=27",
    "prosemirror-view": "patch:prosemirror-view@npm:1.23.7#.yarn/patches/prosemirror-view-npm-1.23.7-5085f0bf9b",
    "minimist": ">= 1.2.6",
    "vite-plugin-mdx": "patch:vite-plugin-mdx@npm:3.5.10#.yarn/patches/vite-plugin-mdx-npm-3.5.10-ae54c30668"
  },
  "dependencies": {
    "@swc/core": "^1.2.182",
    "@swc/helpers": "^0.3.13",
    "dayjs": "^1.11.2",
    "ts-node": "^10.7.0"
  },
  "volta": {
    "node": "18.1.0"
  }
}
