{
  "name": "@brickdoc/server-api",
  "private": true,
  "schematics": "./src/cli/schematics/collection.json",
  "scripts": {
    "dev": "node-dev --enable-source-maps --inspect --notify=false src/main.ts server",
    "start": "ts-node src/main.ts server",
    "console": "ts-node src/main.ts console",
    "cli": "ts-node src/main.ts",
    "g": "ts-node src/cli/schematics/main.ts",
    "lint": "yarn lint:eslint && yarn lint:type",
    "lint:eslint": "TIMING=1 run -T eslint --cache --ext ts,tsx src",
    "lint:fix": "TIMING=1 run -T eslint --cache --ext ts,tsx src --fix",
    "lint:type": "run -T tsc",
    "tsdoc": "run -T typedoc --excludeExternals --options ../../tools/typedoc/config.json --out ./docs/api ./src/**/index.ts"
  },
  "devDependencies": {
    "@brickdoc/schematics": "workspace:^",
    "@faker-js/faker": "^6.1.2",
    "@nestjs/testing": "^8.4.4",
    "@types/graphql-type-json": "^0.3.2",
    "@types/lru-cache": "^7.6.1",
    "leaked-handles": "^5.2.0",
    "node-dev": "^7.4.3",
    "pino-pretty": "^7.6.1"
  },
  "dependencies": {
    "@brickdoc/active-support": "workspace:^",
    "@brickdoc/cypherpunk": "workspace:^",
    "@brickdoc/dotenv": "workspace:^",
    "@brickdoc/nestjs-redis": "workspace:^",
    "@brickdoc/nestjs-slonik": "workspace:^",
    "@nestjs/apollo": "^10.0.9",
    "@nestjs/common": "^8.4.4",
    "@nestjs/core": "^8.4.4",
    "@nestjs/graphql": "^10.0.9",
    "@nestjs/platform-fastify": "^8.4.4",
    "@nestjs/terminus": "^8.0.6",
    "@slonik/migrator": "^0.11.2",
    "apollo-server-fastify": "^3.6.7",
    "cross-spawn": "^7.0.3",
    "date-fns": "^2.28.0",
    "enquirer": "^2.3.6",
    "fastify-cookie": "^5.6.1",
    "fastify-helmet": "^7.0.1",
    "fastify-secure-session": "github:brickdoc/fastify-secure-session",
    "graphql": "^16.3.0",
    "graphql-type-json": "^0.3.2",
    "lru-cache": "^7.8.1",
    "node-dev": "^7.4.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "tzdata": "^1.0.30",
    "yargs": "^17.4.1",
    "yargs-parser": "^21.0.1",
    "yup": "^0.32.11"
  }
}
