{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "Node",
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "isolatedModules":true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["frontends/*"]
    }
  },
  "compileOnSave": false,
  "includes": ["./frontends/common/externals.d.ts"],
  "exclude": ["./cypress"]
}
