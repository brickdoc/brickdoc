{
  "name": "@brickdoc/monorepo",
  "version": "0.0.0",
  "author": "Brickdoc LTD",
  "description": "Brickdoc Monorepo Root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@apollo/client": "3.3.20",
    "@rails/actioncable": "6.1.3",
    "ahooks": "^2.10.5",
    "date-fns": "^2.22.1",
    "graphql": "15.5.0",
    "graphql-ruby-client": "^1.9.4",
    "i18next": "20.3.1",
    "i18next-http-backend": "^1.2.6",
    "i18next-icu": "2.0.3",
    "i18next-multiload-backend-adapter": "^1.0.0",
    "lodash": "4.17.21",
    "qs": "6.10.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet-async": "^1.0.9",
    "react-i18next": "11.10.0",
    "react-router": "5.2.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "5.2.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@brickdoc/design-system": "workspace:packages/brickdoc-design-system",
    "@brickdoc/eslint-plugin": "workspace:packages/eslint-plugin-brickdoc",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-operations": "1.18.0",
    "@graphql-codegen/typescript-react-apollo": "2.2.5",
    "@rails/webpacker": "6.0.0-beta.7",
    "@types/jest": "26.0.23",
    "@types/node": "15.6.1",
    "@types/qs": "6.9.6",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.7",
    "@types/react-router-config": "^5.0.2",
    "@webpack-cli/serve": "1.4.0",
    "autoprefixer": "^10.2.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "commitizen": "4.2.4",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.0",
    "cssnano": "^5.0.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.27.0",
    "fork-ts-checker-webpack-plugin": "^6.2.10",
    "graphql-tag": "2.12.4",
    "husky": "^6.0.0",
    "jest": "27.0.1",
    "less": "^4.1.1",
    "less-loader": "^9.1.0",
    "lint-staged": "11.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "patch-package": "6.4.7",
    "postcss": "^8.3.0",
    "postcss-loader": "^5.3.0",
    "prettier": "2.3.1",
    "tsconfig-paths-webpack-plugin": "3.5.1",
    "typescript": "4.3.2",
    "webpack": "5.38.1",
    "webpack-assets-manifest": "^5.0.6",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "4.7.2",
    "webpack-dev-server": "3.11.2"
  },
  "browserslist": [
    "chrome >= 74",
    "ios >= 13",
    "firefox esr",
    "last 3 edge version",
    "last 2 safari version",
    "not dead"
  ],
  "scripts": {
    "lint": "eslint ./  --ext .ts,.tsx --ignore-pattern 'vendor/*' && bundle exec rubocop --config .rubocop.yml && bundle exec brakeman  --summary --no-pager",
    "lint:fix": "eslint ./ --fix --ext .ts,.tsx --ignore-pattern 'vendor/*' && bundle exec rubocop --config .rubocop.yml -a && bundle exec brakeman  --summary --no-pager",
    "test": "yarn lint",
    "commit": "git add . && cz",
    "graphql": "rake graphql:schema:dump && graphql-codegen --config codegen.yml",
    "postinstall": "husky install",
    "less-vars-loader": "yarn workspace @brickdoc/less-vars-loader",
    "design-system": "yarn workspace @brickdoc/design-system"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.(ts|tsx|js)": [
      "eslint --fix"
    ],
    "(app|lib|saas)/**/*.rb": [
      "bundle exec rubocop -a"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
